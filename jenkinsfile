pipeline {
    agent any
    stages {
        stage("Clean up") {
            steps {
               deleteDir()
            }
        }
       stage("Checkout") {
            steps {
               git url :'https://github.com/nourchawebi/astonvilla.git'
            }
        }
 stage("build docker image) {
            steps {
              sh "docker build -t nourchawebi/astonvillaapp:1.1.${env.BUILD_NUMBER}"
            }
        }
 stage("push docker images) {
            steps {
                 sh "docker push  nourchawebi/astonvillaapp:1.1.${env.BUILD_NUMBER}"
            }
        }
    }
}

pipeline {
    agent any
    environment {
    		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
    	}
    stages {
        stage ("Clean up"){
            steps {
                 deleteDir()
            }
        }
        stage('Checkout') {
            steps {
              git url: 'https://github.com/nourchawebi/astonvilla.git'
            }
        }
        stage('Run Sonar Server') {
            steps {
              sh "docker-compose -f sonar-docker-compose.yaml up -d"
            }
        }
        stage ("Generate docker image") {
            steps {
                sh "docker build -t nourchawebi/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
            }
        }
        stage('Login') {
        
        			steps {
        				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
        			}
        		}

        stage ("push docker image") {
            steps {
              sh "docker push nourchawebi/astonvilla-app:1.1.${env.BUILD_NUMBER}"
            }
        }
    }
}

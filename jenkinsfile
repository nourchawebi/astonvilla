pipeline {
    agent any
    stages {
        stage ("Clean up"){
            steps {
                 deleteDir()
            }
        }
        stage('Checkout') {
            steps {
              git url: 'https://github.com/nourchawebi/astonvilla.git'
            }
        }
     
        stage ("Generate docker image") {
            steps {
                sh "docker build -t nourchawebi/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
            }
        }
        stage ("push docker image") {
            steps {
              sh "docker push nourchawebi/astonvilla-app:1.1.${env.BUILD_NUMBER}"
            }
        }
    }
}
